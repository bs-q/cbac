<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/primary_color"
                android:centerColor="@color/primary_color" android:endColor="@color/primary_color"
                android:angle="270" android:centerX="0.5" android:centerY="0.5" />
            <stroke android:width="@dimen/_1sdp" android:color="#FFFFFF" />
            <corners android:radius="@dimen/_5sdp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="@color/primary_color"
                android:centerColor="@color/primary_color" android:endColor="@color/primary_color"
                android:angle="270" android:centerX="0.5" android:centerY="0.5" />
            <stroke android:width="0.5dp" android:color="@color/primary_color" />
            <corners android:radius="@dimen/_5sdp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="@color/primary_color"
                android:centerColor="@color/primary_color" android:endColor="@color/primary_color"
                android:angle="270" android:centerX="0.5" android:centerY="0.5" />
            <stroke android:width="1dp" android:color="@color/primary_color" />
            <corners android:radius="@dimen/_5sdp" />
        </shape>
    </item>

</selector>